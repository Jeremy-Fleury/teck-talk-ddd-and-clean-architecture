{
	"$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",

	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							{ "source": ":PACKAGE:", "type": false },
							":PACKAGE:",
							":BLANK_LINE:",
							":NODE:",
							{ "source": ":NODE:", "type": false },
							":BLANK_LINE:",
							{ "source": ["@/modules-root/**"], "type": false },
							{ "source": ["@/modules-root/**"] },
							":BLANK_LINE:",
							{ "source": ["@/modules-business/**"], "type": false },
							{ "source": ["@/modules-business/**"] },
							":BLANK_LINE:",
							{ "source": ["@/libs/**"], "type": false },
							{ "source": ["@/libs/**"] },
							":BLANK_LINE:",
							"**"
						]
					}
				},
				"useSortedAttributes": "on",
				"useSortedInterfaceMembers": "on",
				"useSortedKeys": {
					"options": {
						"groupByNesting": true
					}
				}
			}
		},
		"enabled": true
	},

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 180,
		"lineEnding": "lf"
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"quoteProperties": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,

			"correctness": {
				"recommended": true,
				"noConstAssign": "error",
				"noConstructorReturn": "error",
				"noGlobalObjectCalls": "error",
				"noInvalidConstructorSuper": "error",
				"noInvalidUseBeforeDeclaration": "error",
				"noPrecisionLoss": "error",
				"noSelfAssign": "error",
				"noSwitchDeclarations": "error",
				"noUndeclaredVariables": "error",
				"noUnreachable": "error",
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "error",
				"useIsNan": "error",
				"useValidTypeof": "error",
				"useYield": "error"
			},

			"suspicious": {
				"recommended": true,
				"noAssignInExpressions": "error",
				"noAsyncPromiseExecutor": "error",
				"noCatchAssign": "error",
				"noClassAssign": "error",
				"noCompareNegZero": "error",
				"noConfusingVoidType": "error",
				"noConstEnum": "error",
				"noDebugger": "error",
				"noDoubleEquals": "error",
				"noDuplicateCase": "error",
				"noDuplicateClassMembers": "error",
				"noDuplicateObjectKeys": "error",
				"noDuplicateParameters": "error",
				"noEmptyBlockStatements": "error",
				"noExplicitAny": "error",
				"noEvolvingTypes": "error",
				"noFallthroughSwitchClause": "error",
				"noFunctionAssign": "error",
				"noGlobalAssign": "error",
				"noImplicitAnyLet": "error",
				"noMisleadingCharacterClass": "error",
				"noMisleadingInstantiator": "error",
				"noPrototypeBuiltins": "error",
				"noRedeclare": "error",
				"noSelfCompare": "error",
				"noShadowRestrictedNames": "error",
				"noTsIgnore": "error",
				"noUnsafeNegation": "error",
				"noVar": "error",
				"useDefaultSwitchClauseLast": "error",
				"useGetterReturn": "error",
				"useIsArray": "error",
				"useNamespaceKeyword": "error",
				"noConsole": "error"
			},

			"style": {
				"recommended": true,
				"noDefaultExport": "error",
				"noInferrableTypes": "error",
				"noNamespace": "error",
				"noNonNullAssertion": "warn",
				"noParameterAssign": "error",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"noNegationElse": "error",
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {}
					}
				},
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useConst": "error",
				"useConsistentBuiltinInstantiation": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useExponentiationOperator": "error",
				"useExportType": "error",
				"useImportType": "error",
				"useForOf": "error",
				"useLiteralEnumMembers": "error",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": true,
						"conventions": [
							{
								"selector": { "kind": "class" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "interface" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "typeAlias" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "enum" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "enumMember" },
								"formats": ["CONSTANT_CASE"]
							},
							{
								"selector": { "kind": "typeParameter" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "function" },
								"formats": ["camelCase"]
							},
							{
								"selector": { "kind": "variable" },
								"formats": ["camelCase", "CONSTANT_CASE"]
							},
							{
								"selector": { "kind": "objectLiteralProperty" },
								"formats": ["camelCase"]
							},
							{
								"match": "_(.+)",
								"formats": ["camelCase"],
								"selector": { "kind": "classMember", "modifiers": ["private"] }
							},
							{
								"match": "_(.+)",
								"formats": ["camelCase"],
								"selector": {
									"kind": "classMember",
									"modifiers": ["protected"]
								}
							},
							{
								"selector": { "kind": "objectLiteralMethod" },
								"formats": ["camelCase"]
							},
							{
								"selector": { "kind": "typeProperty" },
								"formats": ["camelCase"]
							},
							{
								"selector": { "kind": "typeMethod" },
								"formats": ["camelCase"]
							}
						]
					}
				},
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useShorthandAssign": "error",
				"useSingleVarDeclarator": "error",
				"useTemplate": "error",
				"useArrayLiterals": "error",
				"useAsConstAssertion": "error",
				"useThrowNewError": "error",
				"useNodeAssertStrict": "error",
				"useFragmentSyntax": "error"
			},

			"complexity": {
				"recommended": true,
				"noArguments": "error",
				"noBannedTypes": "error",
				"noExtraBooleanCast": "error",
				"noForEach": "warn",
				"noStaticOnlyClass": "off",
				"noUselessCatch": "error",
				"noUselessConstructor": "error",
				"noUselessFragments": "error",
				"noUselessLabel": "error",
				"noUselessLoneBlockStatements": "error",
				"noUselessRename": "error",
				"noUselessSwitchCase": "error",
				"noUselessTernary": "error",
				"noUselessThisAlias": "error",
				"noUselessTypeConstraint": "error",
				"noVoid": "error",
				"useFlatMap": "error",
				"useLiteralKeys": "error",
				"useOptionalChain": "error",
				"useSimplifiedLogicExpression": "error"
			},

			"security": {
				"recommended": true,
				"noDangerouslySetInnerHtml": "error",
				"noGlobalEval": "error"
			},

			"performance": {
				"recommended": true,
				"noAccumulatingSpread": "warn",
				"noBarrelFile": "error",
				"noDelete": "warn",
				"noReExportAll": "error"
			}
		}
	},

	"overrides": [
		{
			"includes": ["**/*.test.ts", "**/*.spec.ts", "**/*.test.tsx", "**/*.spec.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "warn",
						"noEmptyBlockStatements": "warn",
						"noConsole": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"performance": {
						"noBarrelFile": "off",
						"noReExportAll": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.d.ts"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off",
						"useNamingConvention": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedFunctionParameters": "off"
					}
				}
			}
		}
	]
}
